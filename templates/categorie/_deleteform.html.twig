<form action="{{ path('app.categorie.delete', {id: categorie.id}) }}" method="POST" onsubmit="return confirm('êtes-vous sûr de vouloir supprimer la catégorie {{categorie.nom}}')">
    <input type="hidden" name="token" value="{{ csrf_token('delete' ~ categorie.id) }}">
    <button type="submit" class="btn btn-danger text-light">Supprimer</button>
</form>