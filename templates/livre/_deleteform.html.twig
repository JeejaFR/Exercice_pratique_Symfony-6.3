<form action="{{ path('app.livre.delete', {id: livre.id}) }}" method="POST" onsubmit="return confirm('êtes-vous sûr de vouloir supprimer le livre {{livre.titre}}')">
    <input type="hidden" name="token" value="{{ csrf_token('delete' ~ livre.id) }}">
    <button type="submit" class="btn btn-danger text-light">Supprimer</button>
</form>